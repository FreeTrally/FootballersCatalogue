@model FootballersCatalogue.Models.Player

@{
    ViewData["Title"] = "Footballer's registration";
    IEnumerable<Team> teams = ViewData["Teams"] as IEnumerable<Team>;
}
<h2>Registration form</h2>
<form asp-action="register" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" required autocomplete="off" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" required autocomplete="off" />
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Gender</label>
        <select name="Gender" asp-for="Gender" class="form-control" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Birth date</label>
        <input type="date" asp-for="BirthDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="TeamName" class="control-label">Team</label>
        <input class="form-control" name="TeamName" list="datalistOptions" autocomplete="off">
        @await Html.PartialAsync("_GetTeamsDatalist", teams)
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label">Country</label>
        <select name="Country" asp-for="Country" class="form-control" required>
            <option value="Russia">Russia</option>
            <option value="USA">USA</option>
            <option value="Italy">Italy</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Register" class="btn btn-default" />
    </div>
</form>