@model FootballersCatalogue.Models.Player
@{
    ViewData["Title"] = "Deleting footballer's card";
}
<h2>Footballer's card'</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Surname</dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>Gender</dt>
        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt>Birth date</dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>Team</dt>
        <dd>
            @Html.DisplayFor(model => model.TeamName)
        </dd>

        <dt>Country</dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="hidden" value="@ViewBag.PlayerId" name="Id" />
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>
