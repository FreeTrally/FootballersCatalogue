@model FootballersCatalogue.Models.Player

@{
    ViewData["Title"] = "Редактирование карточки футболиста";
    IEnumerable<Team> teams = ViewData["Teams"] as IEnumerable<Team>;
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="hidden" value="@Model.TeamId" name="TeamId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" required autocomplete="off" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" required autocomplete="off" />
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Пол</label>
        <select name="Gender" asp-for="Gender" class="form-control" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Дата рождения</label>
        <input type="date" asp-for="BirthDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="TeamName" class="control-label">Команда</label>
        <input class="form-control" name="TeamName" list="datalistOptions" required autocomplete="off">
        @await Html.PartialAsync("_GetTeamsDatalist", teams)
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label">Страна</label>
        <select name="Country" asp-for="Country" class="form-control" required>
            <option value="Russia">Россия</option>
            <option value="USA">США</option>
            <option value="Italy">Италия</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
